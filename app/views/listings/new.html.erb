<div class='listing-form'>
<% if current_user.type == 'Realtor'  %>


<% if flash[:listing_error] %>
<%= flash[:listing_error] %>
<% end %>


  <%= form_for @listing, :html => {:multipart => true} do |f|%>
    <%= f.label :title %>
    <%= f.text_field :title %>
    <%= f.label :description %>
    <%= f.text_field :description %>
    <%= f.label :address %>
    <%= f.text_field :address %><br />
    <%= f.label :image, "Add Photo" %>
    <%= f.file_field :image %>
    <%=f.hidden_field(:realtor_id, :value => current_user.id) %>
    <%= f.label :neighborhood, "Neighborhood", :class => 'control-label' %>
    <%= select_tag(:neighborhood, options_from_collection_for_select(@neighborhoods, :id, :name), {:class => 'controls'}) %>
    <p class='alt_hood_find'> OR </p>
    <%= label_tag :find_hood, "Find neighborhood based on address", :class => 'alt_hood_find' %>
    <%= button_tag "Find my hood", :id => 'find_hood', :type => 'button' %><br /><br />
    <%= f.submit "Create Listing" %>
  <% end %>

<% end %>
</div>
