<div class='masthead'></div>
<div class='row-fluid'>
  <%= render 'layouts/breadcrumb' %>
  <h1><%= @listing.title %></h1>
  <%= image_tag @listing.image_url.to_s %>
  <% @listing.choices.each do |choice| %>
    <%= render 'choices_voting_form', :choice => choice %>
  <% end %>
  <%= render 'new_choice_form', :choice => @choice, :listing => @listing %>
</div>

<h2><%= link_to 'Create Post', new_post_path(@listing) %><h2>

<% @listing.posts.each do|post| %>
    <h3><%= post.title %></h3><br>
    <%= post.content %><br>
      <% post.comments.each do |comment| %>
        <h4><%= comment.title %></h4><br>
        <%= comment.content %>
      <% end %>
  <% end %>