<div class='masthead'></div>
<%= render 'layouts/breadcrumb' %>
<div class='container'>
  <div class='row-fluid'>
    <div class='span12' id='listing-title'>
      <div id='listing'>
        <h3 class='subhead'>the shop next door</h3>
        <h1><%= @listing.title %></h1>
        <h3><%= @listing.address %></h3>
        
      </div>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span6' id='listing-image'>
      
      <%= image_tag @listing.image_url(:main).to_s if @listing.image_url%>
    </div>
    <div class='span6' id='listing-description'>
      <h3 class='subhead'>description</h3>
      <%= @listing.description %>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span6'>
      <div id='choice'>
        <h3 class='subhead'>what should this retail space be?</h3>
        <p>  add your own choice, or vote for an existing one here.</p> 
        <div class="hidden choice_template">
          <%= render 'choices_voting_template' %>
        </div>
        <div class='choices'>
          <% @listing.choices.each do |choice| %>
            <%= render 'choices_voting_form', :choice => choice %>
          <% end %>
        </div>
        <%= render 'new_choice_form', :choice => @choice, :listing => @listing %>
      </div>
    </div>  
    <div class='span6'>
      <div id='comment'>
        <h3 class='subhead'>add your two cents here.</h3>
        <h3><%= link_to 'Create Comment', new_comment_path(@listing) %></h3>
          <% @listing.comments.each do |comment| %>
          <h3 class='comment'><%= comment.content %></h3>
          <% end %>
      </div>
    </div>
  </div>
</div>

