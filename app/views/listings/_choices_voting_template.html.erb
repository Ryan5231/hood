<div class='row-fluid sub-box hidden'>
  <%= form_tag("temp", :class => 'choice_vote', :remote => true) do %>
    <div class='span2'>
      <div class='choice-user-pic'>
        <%= image_tag current_user.image_url(:mini).to_s if current_user.image_url%>
      </div>
    </div>
    <div class='span5'>
      <div class='choice-text'>
        <h1><%= label_tag(:choice, "choice content goes here", :class => 'choice-text') %></h1>
      </div>
    </div>
    <div class='span2'>
      <div class='choice-vote-count'>
        <%= label_tag(:choice, "0", :class => 'vote_count', :class => 'label vote_count') %>
      </div>
    </div>
    <div class='span2'>
      <div class='choice-vote'>
        <%= submit_tag("I Want This", :class => 'btn') %>
      </div>
    </div>
  <% end %>
</div>
