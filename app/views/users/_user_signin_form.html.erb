
  <div class='span6'>
    <%= form_tag(sessions_path, :method => 'post', :html => { :class => 'form-signin', :id => 'sign-in' }) do %>
    <h3 class='form-signin-heading'> Log in </h3>
    <div class='control-group'>
      <%= label_tag(:email, "Email") %>
      <%= text_field_tag(:email) %>
    </div>
    <div class='control-group'>
      <%= label_tag(:password, "Password") %>
      <%= text_field_tag(:password) %>
    </div>
    <div class='controls'>
      <%= submit_tag("Log In", :html => { :class => 'btn controls'}) %>
    </div>
    <% end %>
  </div>
