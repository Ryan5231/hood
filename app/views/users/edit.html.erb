<div class='masthead'></div>
<div class='container'>
  <div class='row-fluid'>
    <div class='span12'>
      <h1> Edit Your Info</h1>
    </div>
  </div>
  <div class='row-fluid'>
    <div class='span8'>
      <div class='form-horizontal backyard-box'>
        <div class='control-group'>
          <% if flash[:edit_neighbor_error] %>
          <%= flash[:edit_neighbor_error] %>
          <% end %>
        </div>
        <%= form_for (@user) do |f|%>
        <div class='control-group'>
          <%= f.label :username, :class => 'control-label' %>
          <%= f.text_field :username, :class => 'controls' %>
        </div>
        <div class='control-group'>
          <%= f.label :email, :class => 'control-label' %>
          <%= f.text_field :email, :class => 'controls' %>
        </div>
        
        <div class='control-group'>
          <%= f.label :neighborhood, "My Neighborhood", :class => 'control-label' %>
          <%= select_tag(:neighborhood, options_from_collection_for_select(@neighborhoods, :id, :name, :selected => @user.neighborhoods.map{|hood|hood.id}), :class => 'neighborhood-menu controls ', :multiple => true) %>
        </div>
        <div class='control-group'>
          <%= f.label :submit, :class => 'control-label' %>
          <%= f.submit "Edit Profile", :class => 'controls btn btn-info' %>
        </div>
        <% end %>
      </div>
