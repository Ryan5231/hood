
<div class='row-fluid'>
  <div class='container'>
    <% if @user.type == 'Neighbor' %>
      <div class='masthead'><h1>Neighbor Profile</h1>
        <%= button_to "Edit Profile", edit_user_path(@user), {:class => 'btn' } %>
      </div>
      <div class='span6 profile'>
      <div class="well well-small">
        Neighbor details
      </div>
    <% else %>
      <div class='masthead'><h1>Realtor Profile</h1>
        <%= button_to "Edit Profile", edit_user_path(@user), {:class => 'btn' } %>
      </div>
      <div class='span6 profile'>
      <div class="well well-small">
        Realtor details
      </div>
    <% end %>
    


      <h1><%= @user.username %></h1>
      <p>Email: <%= @user.email %></p>
    </div>
    <div class='span6 profile'>
      <div class="well well-small">
        My neighborhoods
      </div>
      <% @user.neighborhoods.each do |n|  %>
        <span class="label label-success"> <%= n.name %>
        </span>
      <% end %>
    </div>
    <div class='span6 profile'>
      <div class="well well-small">
        My pics
      </div>
      <div id='profile-pic'></div>
    </div>
  </div>

  <div class='container'>
    <div class='span6'>
    <% if @user.type == 'Realtor' %>
      <h2>Open Listings</h2>
      <table class='table table-striped'>
        <tr>
          <th>Listing Title</th>
          <th></th>
          <th></th>
        </tr>
        
        <% @user.listings.each do |listing| %>
          <% if listing.status == 'active' %>
          <tr>
            <td><%= link_to "#{listing.title}", listing_path(listing)  %></td>
            <td><%= button_to "Edit Listing", edit_listing_path(listing) , { :class => 'btn' }  %></td>
            <td><%= button_to "Close Listing", close_listing_path(listing), { :class => 'btn' } %></td>
          </tr>
          <% end %>
        <% end %>  
      </table>

      <h2>Closed Listings</h2>
      <table class='table table-striped'>
        <tr>
          <th>Listing Title</th>
          <th></th>
          
        </tr>
        <% @user.listings.each do |listing| %>
          <% if listing.status == 'inactive' %>
            <tr>
              <td><%= link_to "#{listing.title}", listing_path(listing)  %></td>
              <td><%= link_to "Reopen Listing", reopen_listing_path(listing), { :class => 'btn' } %></td>
            </tr>
          <% end %>
        <% end %>
      </table>
    <% end %>
  </div>
</div>