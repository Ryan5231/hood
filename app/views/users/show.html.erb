<div class='row-fluid'>
  <div class='container'>
    <div class='masthead'><h1>Neighbor Profile</h1></div>
    <div class='span6 profile'>
      <div class="well well-small">
        Neighbor details
      </div>
      <h1><%= @user.username %></h1>
      <p>Email: <%= @user.email %></p>
    </div>
    <div class='span6 profile'>
      <div class="well well-small">
        My neighborhoods
      </div>
      <% @user.neighborhoods.each do |n|  %>
        <span class="label label-success"> <%= n.name %>
        </span>
      <% end %>
    </div>
    <div class='span6 profile'>
      <div class="well well-small">
        My pics
      </div>
      <div id='profile-pic'></div>
    </div>
  </div>
</div>
