<div class="row-fluid">
  <div class='container'>
    <div class='span6'>
      <h3 class='form-signin-heading'> Sign up </h3>
      <%= form_for user, :html => { :class => 'form-horizontal' } do |f| %>
        <div class="control-group">
          <%= f.label :username, :class => 'control-label' %>
          <%= f.text_field :username, :class => 'controls' %>
        </div>
        <div class="control-group">
          <%= f.label :email, :class => 'control-label' %>
          <%= f.text_field :email, :class => 'controls' %>
        </div>
        <div class="control-group">
          <%= f.label :password, :class => 'control-label' %>
          <%= f.password_field :password, :class => 'controls' %>
        </div>
        <div class="control-group">
          <%= f.label :password_confirmation, :class => 'control-label' %>
          <%= f.password_field :password_confirmation, :class => 'controls' %>
        </div>
        <div class="control-group">
          <%= label :neighborhood, "My Neighborhood", :class => 'control-label' %>
          <%= select_tag(:neighborhood, options_from_collection_for_select(Neighborhood.all, :id, :name), {:class => 'controls'}) %>
        </div>
        <div class="control-group">
          <%= f.label :create_user, :class => 'control-label' %>
          <%= f.submit :class => 'btn controls' %>
        </div>
      <% end %>
    </div>
  </div>
</div>


