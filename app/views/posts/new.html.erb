<div class='masthead'></div>
<div class='container'>
  <%= form_for @post do |f| %>
  <%= f.label :title %>
  <%= f.text_field :title %>
  <%= f.label :content %>
  <%= f.text_field :content %>
  <%=f.hidden_field(:user_id, :value => current_user.id) %><br>
  <%=f.hidden_field(:listing_id, :value => @listing.id) %><br>
  <%= f.submit "Submit Post" %>
<% end %>
</div>